{
  "websocketEndpoint": "/api/v1/chat/ws",
  "messages": [
    {
      "name": "UserMessage",
      "direction": "client-to-server",
      "description": "Message sent from the client (user) to the server.",
      "schema": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["userMessage"] },
          "conversationId": { "type": "string", "format": "uuid" },
          "content": { "type": "string" }
        },
        "required": ["type", "conversationId", "content"]
      }
    },
    {
      "name": "AIResponseChunk",
      "direction": "server-to-client",
      "description": "Streaming response chunk sent from the server (AI) to the client.",
      "schema": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["aiResponseChunk"] },
          "conversationId": { "type": "string", "format": "uuid" },
          "content": { "type": "string" },
          "isLastChunk": { "type": "boolean" }
        },
        "required": ["type", "conversationId", "content", "isLastChunk"]
      }
    }
  ]
}
