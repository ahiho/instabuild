DATABASE_URL="postgresql://postgres:postgres@localhost:5432/instabuild"
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
GITHUB_TOKEN="ghp_xxxxxxxxxxxx"
VERCEL_TOKEN="xxxxxxxxxx"
OPENAI_API_KEY="sk-xxxxxxxxxxxx"
PORT=3000

# AI Model Selection Configuration
OPENAI_STRONG_MODEL="gpt-4o"
OPENAI_WEAK_MODEL="gpt-4o-mini"
OPENAI_FALLBACK_MODEL="gpt-3.5-turbo"
MODEL_COMPLEXITY_THRESHOLD="0.7"
MODEL_RESPONSE_TIMEOUT="30000"

# Hybrid Classification (OPTIONAL - uses gpt-4o-mini to classify ambiguous tasks)
# When enabled, uses weak LLM to classify tasks with regex score 0.4-0.6 or 0
# Cost: ~$0.0001 per classification, Latency: ~200-500ms, Cached for 1 hour
# Benefits: More accurate than regex for edge cases, adapts to new patterns
# Set to 'true' to enable, anything else disables (default: false)
USE_HYBRID_CLASSIFICATION="false"

# Debug Mode (DEVELOPMENT ONLY - exposes sensitive data to client)
# When enabled, includes full tool execution details in API responses
# This includes: data, technicalDetails, changedFiles from tool results
# SECURITY WARNING: Only enable in development/staging - NEVER in production!
# Default: false (only shows userFeedback in production)
DEBUG_MODE="false"

# Unsplash API Configuration (OPTIONAL - for fetching real images)
# Get your API key from: https://unsplash.com/developers
# Demo mode: 50 requests/hour (free, no approval needed)
# Production mode: 5000 requests/hour (free, requires approval)
# If not configured, landing pages will use PlaceholderImage component
UNSPLASH_ACCESS_KEY="your_unsplash_access_key_here"

# ============================================
# Deployment Feature Configuration
# ============================================

# GitHub OAuth (REQUIRED for GitHub Pages deployments)
# Create OAuth App: https://github.com/settings/developers
# Authorization callback URL should be: http://localhost:5173/deployment/callback
# Scopes needed: repo, workflow
GITHUB_CLIENT_ID="your_github_oauth_client_id"
GITHUB_CLIENT_SECRET="your_github_oauth_client_secret"
GITHUB_REDIRECT_URI="http://localhost:5173/deployment/callback"

# GitHub Repository Settings (OPTIONAL)
# Set to "true" to create private repositories (requires GitHub Pro)
# Set to "false" for public repositories (free accounts)
GITHUB_CREATE_PRIVATE_REPOS="false"

# Token Encryption (REQUIRED - 32-byte hex string = 64 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DEPLOYMENT_TOKEN_ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Build Configuration (OPTIONAL - defaults shown)
DEPLOYMENT_BUILD_TIMEOUT_MS="600000"        # 10 minutes build timeout
DEPLOYMENT_MAX_BUILD_LOG_SIZE="1048576"     # 1 MB max log size
